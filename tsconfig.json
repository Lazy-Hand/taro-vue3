{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"removeComments": false,
		"preserveConstEnums": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"noImplicitAny": false,
		"allowSyntheticDefaultImports": true,
		"outDir": "lib",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictNullChecks": true,
		"sourceMap": true,
		"baseUrl": ".",
		"rootDir": ".",
		"jsx": "preserve",
		"allowJs": true,
		"resolveJsonModule": true,
		"typeRoots": [
			"node_modules/@types"
		],
		// 模块名到基于 baseUrl 的路径映射的列表。
		"paths": {
			"@/*": [
				"src/*"
			]
		}
	},
	"include": [
		"./src",
		"./types",
		"./src/typings",
		"components.d.ts"
	],
	"exclude": [
		"node_modules/**"
	],
	"compileOnSave": false
}